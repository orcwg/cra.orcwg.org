---
layout: layout.njk
pagination:
  data: orcwgImport.faq
  size: 1
  alias: item
permalink: "{{ item.url }}"
eleventyComputed:
  title: "{{ item.question }}"
---

<div class="question">
  <h2>{{ item.question | markdown | safe }}</h2>
</div>

<div class="answer">
  {{ item.answer | markdown | safe }}
</div>

{% if item.Status == "draft" %}
<div class="faq-status-display">
  <p><strong>‚ö†Ô∏è This FAQ is a draft</strong> - it hasn't been reviewed by the FAQ Task Force. The answer may be incomplete or incorrect.</p>
</div>
{% endif %}

{% if item.guidanceData %}
<div class="faq-status-display">
  <p><strong>üõë Pending Guidance</strong></p>
  {% if item.guidanceData.hasSpecificGuidance %}
    <div class="guidance-content">
      <p>This FAQ awaits commission guidance on:</p>
      <p class="guidance-phrase">{{ item.guidanceData.guidanceNeeded }}</p>
    </div>
    <div class="guidance-actions">
      <a href="{{ item.guidanceData.guidanceUrl }}" class="guidance-link">View full guidance request ‚Üí</a>
    </div>
  {% else %}
    <p>This FAQ awaits commission guidance.</p>
  {% endif %}
</div>
{% endif %}

<button class="admin-toggle" onclick="toggleAdminMode()" title="Toggle admin information">
  ‚úèÔ∏è
</button>

<div class="admin-info" style="display: none;">
  {% if item.adminData.hasGuidance %}
  <div class="pending-guidance-link">
    <strong>üõë Related Pending Guidance:</strong> <a href="{{ item.adminData.guidanceUrl }}">{{ item.adminData.guidanceTitle }}</a>
    <p><em>This FAQ is affected by pending guidance that is currently being developed.</em></p>
  </div>
  {% endif %}

  {% if item.adminData.hasRelatedIssue %}
  <div class="related-issue">
    <strong>Related issue:</strong> <a href="{{ item.adminData.relatedIssue }}">{{ item.adminData.relatedIssue }}</a>
  </div>
  {% endif %}

  <div class="edit-on-github">
    <span class="edit-icon">‚úèÔ∏è</span>
    <a href="{{ item.adminData.githubEditUrl }}" target="_blank" rel="noopener">Edit this FAQ on GitHub</a>
  </div>
</div>

<script>
function toggleAdminMode() {
  const adminInfo = document.querySelector('.admin-info');
  const button = document.querySelector('.admin-toggle');

  if (adminInfo.style.display === 'none' || adminInfo.style.display === '') {
    adminInfo.style.display = 'block';
    button.classList.add('active');
    button.title = 'Hide admin information';
  } else {
    adminInfo.style.display = 'none';
    button.classList.remove('active');
    button.title = 'Toggle admin information';
  }
}
</script>

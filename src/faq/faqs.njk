---
# Individual FAQ Pages
# Paginated template that generates a page for each FAQ
# Shows the full FAQ content on its own page
layout: layout.njk
pagination:
  data: data.faqs
  size: 1
  alias: faq
permalink: "{{ faq.permalink }}"
eleventyComputed:
  title: "{{ faq.pageTitle }}"
---

<article class="section-card">
  <h1 class="section-header">{{ faq.question | markdownInline | safe }}</h1>
  {{ faq.answer | markdown | safe }}

  {% include "components/faq/faq-attribution.njk" %}

  {% include "components/faq/faq-warning.njk" %}
  {% set item = faq %}
  {% include "components/common/actions.njk" %}
</article>
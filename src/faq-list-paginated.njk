---
layout: layout.njk
pagination:
  data: data.lists
  size: 1
  alias: list
  addAllPagesToCollections: true
permalink: "{{ list.permalink }}"
eleventyComputed:
  title: "{{ list.title }}"
---

<section class="section-intro">
  <p>{{ list.description }}</p>
</section>

<article class="section-card">
{% set componentData = {
  title: list.title,
  icon: list.icon,
  faqs: list.faqs
} %}
{% include "components/faq-accordion.njk" %}

 <div class="faq-actions">
  <div class="admin-links">
    {# Admin links will be added here eventually #}
  </div>

  <div class="regular-actions admin-links">
    <a href="{{ list.editOnGithubUrl }}" class="action-button" target="_blank" rel="noopener" title="Edit on GitHub">
      {% include "icons/edit.svg" %}
      <span>Edit on GitHub</span>
    </a>
  </div>
</div>
</article>

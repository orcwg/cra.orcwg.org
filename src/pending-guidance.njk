---
layout: layout.njk
pagination:
  data: orcwgImport.guidance
  size: 1
  alias: item
permalink: "{{ item.url }}"
eleventyComputed:
  title: "Guidance request : {{ item.title }}"
---

<div class="pending-guidance-page">
  <div class="pending-guidance-status-title">
    <h2>üõë Pending Guidance</h2>
  </div>

  <div class="pending-guidance-content">
    {{ item.rawMarkdown | markdown | safe }}

    <div class="related-faqs-inline">
      <ul>
        {% set guidanceKey = item.filename | replace('.md', '') %}
        {% set relatedFaqKeys = orcwgImport.crossReferences.faqGuidanceLinks[guidanceKey] %}
        {% for faqKey in relatedFaqKeys %}
          {% set faq = orcwgImport.faq[faqKey] %}
          <li><a href="{{ faq.url }}">{{ faq.question | markdown | safe | striptags }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="edit-on-github">
    <span class="edit-icon">‚úèÔ∏è</span>
    <a href="https://github.com/orcwg/cra-hub/edit/main/faq/pending-guidance/{{ item.filename }}" target="_blank" rel="noopener">Edit this guidance request on GitHub</a>
  </div>
</div>


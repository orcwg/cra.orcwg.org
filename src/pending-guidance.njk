---
layout: layout.njk
pagination:
  data: orcwgImport.guidance
  size: 1
  alias: item
permalink: "{{ item.url }}"
eleventyComputed:
  title: "{{ item.title or 'Pending Guidance' }}"
---

<div class="pending-guidance-page">
  <div class="pending-guidance-status-title">
    <h2>🛑 Pending Guidance</h2>
  </div>

  <div class="answer pending-guidance-content">
    {{ item.answer | markdown | safe }}

    <div class="related-faqs-inline">
      <ul>
        {% for faq in item.relatedFaqs %}
        <li><a href="{{ faq.url }}">{{ faq.question | markdown | safe | striptags }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  {% if item.templateData.hasRelatedIssue %}
  <div class="related-issue">
    <strong>Related issue:</strong> <a href="{{ item.templateData.relatedIssue }}">{{ item.templateData.relatedIssue }}</a>
  </div>
  {% endif %}

  <div class="edit-on-github">
    <span class="edit-icon">✏️</span>
    <a href="{{ item.templateData.githubEditUrl }}" target="_blank" rel="noopener">Edit this guidance request on GitHub</a>
  </div>
</div>


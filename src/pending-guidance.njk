---
layout: layout.njk
pagination:
  data: data.guidance
  size: 1
  alias: item
permalink: "{{ item.permalink }}"
eleventyComputed:
  title: "{{ item.pageTitle }}"
---

<article class="faq-main-content faq-main-content--guidance" data-status="{{ item.data.status }}">
  <header class="guidance-header">
    <div class="guidance-title-box">
      <div class="guidance-header-prefix">Commission Guidance Request for:</div>
      <h1 class="guidance-header-title">{{ item.title or 'Pending Guidance' }}</h1>
    </div>
    <div class="guidance-tracker-box">
      <div class="guidance-status-tracker">
        <div class="tracker-line">
          <div class="tracker-progress" style="width: {{ item.tracker.progress }}%;"></div>
          <div class="tracker-steps">
            {% for step in item.tracker.steps %}
            <div class="tracker-step tracker-step--{{ step.status }}">
              <div class="tracker-dot"></div>
              <div class="tracker-label">{{ step.label }}</div>
              {% if step.date %}<div class="tracker-tooltip">{{ step.date }}</div>{% endif %}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </header>
  {{ item.body | markdown | safe }}

  {% if item.relatedFaqs and item.relatedFaqs.length > 0 %}
  <div class="related-faqs-inline">
    <ul>
      {% for faq in item.relatedFaqs %}
      <li><a href="{{ faq.permalink }}">{{ faq.question | markdownInline | safe }}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  <div class="admin-info" hidden>
    {% if item.data["Related issue"] %}
    <a href="{{ item.data["Related issue"] }}" target="_blank" rel="noopener">View Issue</a>
    {% endif %}
    <a href="https://github.com/orcwg/cra-hub/edit/main/faq/pending-guidance/{{ item.filename }}" target="_blank" rel="noopener">Edit on GitHub</a>
  </div>
</article>

<button class="admin-toggle" onclick="toggleAdminMode()" title="Toggle admin information">
  ✏️
</button>


---
layout: layout.njk
pagination:
  data: data.guidance
  size: 1
  alias: item
permalink: "{{ item.permalink }}/"
eleventyComputed:
  title: "{{ item.pageTitle }}"
---

<article class="section-card">
  <h1 class="section-header">{{ item.title or 'Pending Guidance' }}</h1>

  {{ item.body | markdown | safe }}

  {% if item.relatedFaqs and item.relatedFaqs.length > 0 %}
  <ul>
    {% for faq in item.relatedFaqs %}
    <li><a href="{{ faq.permalink }}">{{ faq.question | markdownInline | safe }}</a></li>
    {% endfor %}
  </ul>
  {% endif %}
</article>

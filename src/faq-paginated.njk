---
layout: layout.njk
pagination:
  data: data.faqItems
  size: 1
  alias: item
permalink: "{{ item.permalink }}"
eleventyComputed:
  title: "{{ item.pageTitle }}"
---

<article class="section-card">
  <h1 class="section-header">{{ item.question | markdownInline | safe }}</h1>
  {{ item.answer | markdown(item) | safe }}

  {% if item.status == "draft" or item.relatedGuidanceRequest %}
  <aside class="warning">
    {% if item.status == "draft" %}
    <p><strong>This FAQ is a draft</strong> - it hasn't been reviewed by the FAQ Task Force. The answer may be incomplete or incorrect.</p>
    {% endif %}

    {% if item.relatedGuidanceRequest %}
    <p><strong>Pending Guidance</strong></p>
    {% if item.relatedGuidanceRequest.guidanceText %}
      <p>This FAQ awaits commission guidance on:</p>
      <blockquote>{{ item.relatedGuidanceRequest.guidanceText }}</blockquote>
      <p><a href="{{ item.relatedGuidanceRequest.permalink }}">View full guidance request â†’</a></p>
    {% else %}
      <p>This FAQ awaits commission guidance.</p>
    {% endif %}
    {% endif %}
  </aside>
  {% endif %}

  <div class="faq-actions">
    <div class="admin-links">
      <a href="{{ item.editOnGithubUrl }}" class="action-button" target="_blank" rel="noopener" title="Edit this FAQ on GitHub">
        {% include "icons/edit.svg" %}
        <span>Edit on GitHub</span>
      </a>
      {% if item.relatedIssue %}
      <a href="{{ item.relatedIssue }}" class="action-button" target="_blank" rel="noopener" title="View related issue">
        {% include "icons/issue.svg" %}
        <span>Related issue</span>
      </a>
      {% endif %}
    </div>
    <button class="action-button" data-permalink="{{ item.permalink }}" title="Copy FAQ page link" aria-label="Copy FAQ page link">
      {% include "icons/copy.svg" %}
      <span>Copy link</span>
    </button>
  </div>
</article>

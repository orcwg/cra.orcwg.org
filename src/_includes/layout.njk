<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }} - {% if title %}{{ title | striptags }}{% endif %}</title>
    <link rel="stylesheet" href="/assets/fonts/roboto.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <script src="/assets/js/mermaid.min.js"></script>
</head>
<body>
    <header class="site-header">
        <a href="/"><h1>{{ site.title }}</h1></a>
        <nav class="site-nav">
            {% for nav in site.navigation %}
            <a href="{{ nav.url }}" title="{{ nav.description }}"{% if page.url == nav.url or page.url.startsWith(nav.url) or (nav.matchPattern and page.url.startsWith(nav.matchPattern)) %} aria-current="page"{% endif %}>{{ nav.title }}</a>
            {% endfor %}
        </nav>
        <img src="/assets/images/orcwg_orc.png" alt="Open Regulatory Compliance Working Group Orc mascott">
    </header>

    <main>
        {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <script src="/assets/js/site.js"></script>
</body>
</html>

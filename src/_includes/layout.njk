<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site.title }} - {% if title %}{{ title | striptags }}{% endif %}</title>
    <link rel="stylesheet" href="/assets/fonts/roboto.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <script src="/assets/js/mermaid.min.js"></script>
</head>
<body>
    <main>
        <header class="site-header">
            <a href="/" class="site-title"><h1>{{ site.title }}</h1></a>
            <nav class="site-nav">
                {% for nav in site.navigation %}
                <a href="{{ nav.url }}" title="{{ nav.description }}" class="nav-link{% if page.url == nav.url or page.url.startsWith(nav.url) or (nav.matchPattern and page.url.startsWith(nav.matchPattern)) %} active{% endif %}">{{ nav.title }}</a>
                {% endfor %}
            </nav>
            <img src="/assets/images/orcwg_orc.png" alt="Open Regulatory Compliance Working Group Orc mascott" class="site-logo">
        </header>
        {{ content | safe }}

        {% include "footer.njk" %}
    </main>

    <script>
        // Convert markdown code blocks with language-mermaid to mermaid divs
        document.addEventListener('DOMContentLoaded', function() {
            const mermaidBlocks = document.querySelectorAll('code.language-mermaid');
            mermaidBlocks.forEach(function(block) {
                const mermaidDiv = document.createElement('div');
                mermaidDiv.className = 'mermaid';
                mermaidDiv.textContent = block.textContent;
                block.parentNode.parentNode.replaceChild(mermaidDiv, block.parentNode);
            });

            // Initialize Mermaid after converting blocks
            mermaid.initialize({
                startOnLoad: false,
                theme: 'default'
            });

            // Manually trigger Mermaid rendering
            mermaid.run();
        });
    </script>
    <script src="/assets/js/site.js"></script>
</body>
</html>

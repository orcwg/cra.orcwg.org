{#
  Reusable Callout Component

  Parameters:
  - content: The markdown/HTML content to display
  - type: CSS class (e.g., 'orc-recommendation', 'info', 'warning')
  - title: Optional title for the callout
  - icon: Optional emoji/icon
  - graph: Optional graph image path or SVG string

  Usage in templates:
  {% set calloutData = {
    content: item.orcRecommendation,
    type: 'orc-recommendation',
    title: 'ORC WG Recommendation',
    icon: 'ðŸ’¡',
    graph: '/assets/images/chart.png'
  } %}
  {% include "components/callout.njk" %}
#}


<div class="callout {{ type }} {% if graph %} with-graph {% endif %}">
  <h2> {{title}}</h2>

  {{ content | markdown | safe }}

  {% if graph %}
    <div class="graph-corner">
      <img src= "{{graph}}" alt="Chart" />
    </div>
  {% endif %}
  
</div>

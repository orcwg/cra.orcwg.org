{#
  List Card Component - Card format for displaying a list reference

  Parameters (set via list variable):
  - list: The list object to display as a card
#}

<a href="{{ list.permalink }}" class="card">
  <h2>{% if list.icon %}{{ list.icon }} {% endif %}{{ list.title }}</h2>
  {{ list.description | markdown | safe }}
  <span class="card-meta">
    {{ list.countText }}
  </span>
</a>

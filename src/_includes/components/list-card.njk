{#
  List Card Component - Card format for displaying a list reference

  Parameters (set via listData variable):
  - list: The list object to display as a card
#}

<a href="{{ listData.permalink }}" class="card">
  <h2>{% if listData.icon %}{{ listData.icon }} {% endif %}{{ listData.title }}</h2>
  <p>{{ listData.description }}</p>
  <span class="card-meta">
    {{ listData.countText }}
  </span>
</a>

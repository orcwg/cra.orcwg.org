{#
  FAQ Attribution Component

  Renders copyright and license attribution for FAQs when applicable.

  Parameters:
  - faq: FAQ object with optional author, authorUrl, copyrightDate, license, and licenseUrl fields
#}

{% if faq.author or faq.license %}
<div class="faq-attribution">
  {% if faq.author %}
    © {{ faq.createdAt.getFullYear() }}
    {% if faq.authorUrl %}
      <a href="{{ faq.authorUrl }}">{{ faq.author }}</a>
    {% else %}
      {{ faq.author }}
    {% endif %}
  {% endif %}
  {% if faq.license %}
     • {% if faq.licenseUrl %}<a href="{{ faq.licenseUrl }}">{{ faq.license }}</a>{% else %}{{ faq.license }}{% endif %}
  {% endif %}
  {% if faq.srcUrl %}
    • <a href="{{ faq.srcUrl }}">{{ faq.source or "Source" }}</a>
  {% endif %}
  {% if faq.disclaimer %}
    • <details class="disclaimer">
        <summary>Disclaimer</summary>
        <p>
          <strong>Disclaimer:</strong> {{ faq.disclaimer | markdownInline | safe }}
        </p>
      </details>
  {% endif %}
</div>
{% endif %}
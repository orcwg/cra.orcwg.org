{#
  List Expanded Items Component

  Renders the list items (FAQs and sublists) without the heading/description.
  This is the "list part" that can be used standalone or wrapped with context.

  Parameters:
  - list: List object with children
  - styleClass: 'odd' or 'even' for alternating backgrounds (default 'even')
#}
{# Save current values before the loop #}
{% set currentList = list %}
{% set currentStyleClass = styleClass %}

<ul class="link-list depth-{{ styleClass }}">
  {% for item in currentList.children %}
    {% if item.type == 'list' and not item.hideInAllFaqs %}
      {# Nested list - render with context wrapper #}
      <li>
        {% set list = item %}
        {% set styleClass = 'odd' if currentStyleClass == 'even' else 'even' %}
        {% include "components/faq/list-expanded-with-context.njk" %}
      </li>
    {% elif item.type == "faq" %}
      {# FAQ item #}
      {% set faq = item %}
      <li>
        <a href="{{ faq.permalink }}">
          <span class="question-text">
            {% if faq.questionNumber and currentList._showQuestionNumbers %}
              {{ faq.questionNumber }}
            {% endif %}
            {{ faq.questionHtml | safe }}
          </span>
          <span class="badges" hidden>{% include "components/faq/faq-badges.njk" %}</span>
        </a>
      </li>
    {% endif %}
  {% endfor %}
</ul>
